@model WebApp.Models.Medarbejder

@{
    ViewData["Title"] = "Slet";
}

<h1>Slet Medarbejders</h1>

<h3>Er du sikker på at du vil slette denne medarbejder?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Navn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.navn)
        </dd>
        <dt class = "col-sm-2">
            Telefon Nummer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefonNummer)
        </dd>
        <dt class = "col-sm-2">
            E-Mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.eMail)
        </dd>
        <dt class = "col-sm-2">
            Alder
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.alder)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbage til liste</a>
    </form>
</div>
